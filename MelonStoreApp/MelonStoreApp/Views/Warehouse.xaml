<UserControl x:Class="MelonStoreApp.Views.Warehouse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="ToggleButton" x:Key="tagButton">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,3,10,3"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <WrapPanel>
            <ToggleButton Content="All" Style="{StaticResource tagButton}"/>
            <ToggleButton Content="Female" Style="{StaticResource tagButton}"/>
            <ToggleButton Content="Male" Style="{StaticResource tagButton}"/>
            <ToggleButton Content="Shirts" Style="{StaticResource tagButton}"/>
            <ToggleButton Content="Trousers" Style="{StaticResource tagButton}"/>
            <ToggleButton Content="Dresses" Style="{StaticResource tagButton}"/>
            <ToggleButton Content="Blouses" Style="{StaticResource tagButton}"/>
        </WrapPanel>

        <DataGrid x:Name="warehousePannel" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id, Mode=TwoWay}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name,Mode=TwoWay}"/>
                <DataGridTextColumn Header="Brand" Binding="{Binding Brand,Mode=TwoWay}"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category,Mode=TwoWay}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price,Mode=TwoWay}"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount,Mode=TwoWay}"/>
                <DataGridTemplateColumn Header="Order">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Width="150">
                                <TextBlock Text="Amount:"></TextBlock>
                                <TextBox Width="50" Margin="10,0,0,0"></TextBox>
                                <Button Content="Order" Margin="10,0,0,0"></Button>
                            </StackPanel>                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </StackPanel>
</UserControl>
