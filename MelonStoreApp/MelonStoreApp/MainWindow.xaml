<Window x:Class="MelonStoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MelonStoreApp.Views"
        xmlns:viewModels="clr-namespace:MelonStoreApp.ViewModels"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{x:Type viewModels:MainViewModel}"
        >
    <Grid>
        <ItemsControl >
            <ItemsControl.Items>
                <views:Login Visibility="{Binding}"/>
                <views:Register Visibility="{Binding}"/>
                <views:Home Visibility="{Binding}"/>
            </ItemsControl.Items>
        </ItemsControl>

    </Grid>
</Window>
